# Editor configuration, see https://editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.ts,*.js,*.coffee,*.json,*.rb,*.yml,*.yaml]
indent_size = 2

[*.ps1]
end_of_line = crlf
indent_size = 4

[*.config]
indent_size = 4

[*.md]
max_line_length = off
trim_trailing_whitespace = false
